<p id="notice"><%= notice %></p>

<h1>Books in "<%= @current_list["title"] %>" list </h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% a = 0 %>
    <% @listbooks.each do |listbook| %>
      <% if listbook.list_id.to_s == @current_list_id %>
      <% a = a + 1 %>
      <tr>
        <% mybook = Book.find(listbook.book_id) %>
        <td><%= mybook.title %></td>
        <td><%= link_to 'Remove', listbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
    <% if a == 0 %>
      <tr><td>This list is empty.</td></tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Book', new_listbook_path %>
